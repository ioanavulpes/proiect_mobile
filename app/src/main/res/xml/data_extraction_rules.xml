<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="firebase_auth_prefs.xml"/>
        <exclude domain="sharedpref" path="firebase_analytics_prefs.xml"/>
        <exclude domain="sharedpref" path="firebase_messaging_prefs.xml"/>
        <exclude domain="sharedpref" path="firebase_ml_prefs.xml"/>
        <exclude domain="sharedpref" path="firebase_firestore_prefs.xml"/>
        <exclude domain="sharedpref" path="firebase_database_prefs.xml"/>
        <exclude domain="sharedpref" path="firebase_storage_prefs.xml"/>
    </cloud-backup>
    <device-transfer>
        <!-- Allow device transfer for user data -->
        <include domain="sharedpref" path="user_preferences.xml"/>
        <include domain="database" path="local_events.db"/>
    </device-transfer>
</data-extraction-rules>
